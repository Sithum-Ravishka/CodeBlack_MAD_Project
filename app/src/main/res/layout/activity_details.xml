<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageIv"
            android:layout_width="409dp"
            android:layout_height="180dp"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/titelTv"
            app:srcCompat="@drawable/_23" />

        <TextView
            android:id="@+id/titelTv"
            android:layout_width="400dp"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            android:text="Title"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/PriceName"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="48dp"
            android:text="Price"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageIv" />

        <TextView
            android:id="@+id/priceTv"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginEnd="68dp"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/PriceName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/textView28"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="40dp"
            android:text="Description"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/PriceName" />

        <TextView
            android:id="@+id/desTv"
            android:layout_width="324dp"
            android:layout_height="50dp"
            android:layout_marginTop="184dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.35"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageIv" />

        <TextView
            android:id="@+id/roomName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="44dp"
            android:text="Rooms"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/desTv" />

        <TextView
            android:id="@+id/kitchnName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:text="Kitchens"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/roomName"
            app:layout_constraintEnd_toStartOf="@+id/bathName" />

        <TextView
            android:id="@+id/bathName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:text="BathRooms"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/kitchnName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/roomTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="28dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomName" />

        <TextView
            android:id="@+id/kitchenTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/roomTv"
            app:layout_constraintStart_toEndOf="@+id/roomTv" />

        <TextView
            android:id="@+id/bathTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="44dp"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/kitchenTv"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/passName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Passengers"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.118"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/roomTv" />

        <TextView
            android:id="@+id/adultsName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="108dp"
            android:text="Adults"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/kitchenTv" />

        <TextView
            android:id="@+id/childName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="112dp"
            android:text="Childrens"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/adultsName"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/adultsTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="96dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adultsName" />

        <TextView
            android:id="@+id/childTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="112dp"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/adultsTv"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/conName"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="56dp"
            android:text="Phone"
            android:textAlignment="center"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/adultsTv" />

        <TextView
            android:id="@+id/phoneTv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/conName"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/callBtn"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginEnd="24dp"
            android:text="Call Now"
            android:textAlignment="center"
            app:layout_constraintBaseline_toBaselineOf="@+id/phoneTv"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Book Now"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/phoneTv" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>